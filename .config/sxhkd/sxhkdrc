# open terminal
super + Return
	termite

# open program launcher
super + shift + Escape
	rofi -show drun

# kill process
super + w
	bspc node --kill

# focus on the next node in the current desktop
alt + Tab
	bspc node --focus next.local

# switch desktops
super + {1-9}
  bspc desktop --focus \^{1-9}

# raise volume
XF86AudioRaiseVolume
  amixer --quiet set Master 5%+

# lower volume
XF86AudioLowerVolume
  amixer --quiet set Master 5%-

# mute sound
XF86AudioMute
  amixer --quiet set Master toggle
